<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cakir.checking.RippleBackground
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    app:rb_color="#54a75d"
    app:rb_radius="30dp"
    app:rb_rippleAmount="6"
    app:rb_duration="3000"
    app:rb_scale="10">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/centerImage"
        android:src="@drawable/check_logo" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/foundDevice"
            android:src="@drawable/phone2"
            android:visibility="invisible"
            android:layout_above="@+id/centerImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/foundDevice2"
            android:src="@drawable/phone2"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/centerImage"
            android:layout_toEndOf="@+id/centerImage"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/foundDevice3"
            android:src="@drawable/phone2"
            android:visibility="invisible"
            android:layout_alignTop="@+id/foundDevice2"
            android:layout_toLeftOf="@+id/centerImage"
            android:layout_toStartOf="@+id/centerImage"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />
    </com.cakir.checking.RippleBackground>
</RelativeLayout>