<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f1ec"
    android:paddingTop="0dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f6f1ec"
            android:weightSum="1">

            <ImageView
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/a"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop"
                android:layout_below="@+id/toolbar2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_marginTop="5dp"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Ad"
                android:ems="10"
                android:id="@+id/editText6"
                android:background="#f6f1ec"
                android:focusable="true"
                android:layout_above="@+id/editText7"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"
                android:gravity="center_horizontal|center_vertical"/>

            <EditText
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Soyad"
                android:ems="10"
                android:id="@+id/editText7"
                android:textAlignment="center"
                android:background="#f6f1ec"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/editText6"
                android:layout_alignStart="@+id/editText6"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"
                android:layout_weight="0.03"
                android:gravity="center_horizontal|center_vertical"/>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:hint="E-Mail"
                android:ems="10"
                android:id="@+id/editText4"
                android:textAlignment="center"
                android:background="#f6f1ec"
                android:layout_above="@+id/editText3"
                android:layout_alignLeft="@+id/editText7"
                android:layout_alignStart="@+id/editText7"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"
                android:gravity="center_horizontal|center_vertical"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Kullanici Adi "
                android:layout_marginTop="10dp"
                android:background="#f6f1ec"
                android:ems="10"
                android:id="@+id/editText3"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/editText5"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignStart="@+id/editText4"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"
                android:gravity="center_horizontal|center_vertical"/>

            <EditText
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#f6f1ec"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText5"
                android:hint="Şifre"
                android:textAlignment="center"
                android:layout_above="@+id/button2"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"
                android:gravity="center_horizontal|center_vertical"/>

            <Button
                android:text="Kayıt"
                android:id="@+id/button2"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="110dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_login_button"
                android:layout_height="60dp"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>